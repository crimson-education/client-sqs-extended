{
    "compilerOptions": {
      "sourceMap": true,
      "declaration": true,
      "declarationMap": true,
      "esModuleInterop": true,
      "allowJs": false,
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "preserveConstEnums": true,
      "strictNullChecks": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "moduleResolution": "node",
      "module": "CommonJS",
      "lib": [
        "es2018"
      ],
      "target": "es2018",
      "rootDir": "src",
      "outDir": "lib"
    },
    "exclude": [
      "lib",
      "coverage",
      "prettier.config.js"
    ]
  }
  